<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header middle">Edit post</div>

	<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">

	<div class="field">
		<label>Title:</label>
		<input type="text" name="blog[title]" value="<%= blog.title %>">
	</div>

	<div class="field">
		<label>Photo url:</label>
		<input type="text" name="blog[photo]" value="<%= blog.photo %>">
	</div>

	<div class="field">
		<label>Body:</label>
		<textarea name="blog[body]" ><%= blog.body %></textarea>
	</div>

	<input type="submit" value="Update" class="ui green basic button">

</form>
</div>

<% include partials/footer %>