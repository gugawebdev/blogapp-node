<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header"><%= blog.title %></div>
	<div class="ui top attached">
		<div class="item">
			<img src="<%= blog.photo %>" class="ui centered rounded image big">
			
			<div class="content">
				<p><%= blog.created.toDateString() %></p>
			</div>
			<div class="description">
				<p><%= blog.body %></p>


				</div>

			<a href="<%= blog._id%>/edit" class="ui blue basic button">Update post</a>

			<form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" style="display:inline;">
				<input type="submit" name="" value="Deletar" class="ui basic red button">
			</form>

			</div>
		</div>
</div>





<% include partials/footer %>